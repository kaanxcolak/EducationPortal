@model PaginatedList<EducationInfoVM>
@{
    string previousDisabled = Model.PreviousPage ? "" : "disabled";
    string nextDisabled = Model.NextPage ? "" : "disabled";
}
@{
    ViewData["Title"] = "MyRequests";
    Layout = "~/Areas/Student/Views/Shared/_LayoutStudent.cshtml";
}




<div class="col-12 col-md-10 offset-1 offset-1">
    <div class="text-danger" asp-validation-summary="All"></div>
    <h3>All Requested</h3>

    <table style="width:100%; border:solid" class="table table-hover">
        <tr>
            <th style="border:solid; color:blue">TRAINER</th>
            <th style="border:solid; color:blue">EDUCATION</th>
            <th style="border:solid; color:blue">CATEGORY</th>
            <th style="border:solid; color:blue">TRAINERTYPE</th>
            <th style="border:solid; color:blue">KONTENJAN</th>
            <th style="border:solid; color:blue">PRICEPERDAY</th>
            <th style="border:solid; color:blue">TIME</th>
            <th style="border:solid; color:blue">STATUS</th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th style="border:solid; color:black">@item.Trainer.Name <br />@item.Trainer.Surname - <br />@item.Trainer.Department</th>
                <th style="border:solid; color:black">@item.Name</th>
                <th style="border:solid; color:black">@item.Category.Name</th>
                <th style="border:solid; color:black">@item.Trainer.Type</th>
                <th style="border:solid; color:black">@item.Kontenjan</th>
                <th style="border:solid; color:black">@item.PricePerDay</th>
                <th style="border:solid; color:black">@item.Time</th>
                <th style="border:solid; color:black">
                    <a asp-controller="Account" asp-action="Index" class="hover-btn-new"><span>Cancel</span></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </th>


            </tr>
        }
        <br />
        

    </table>
    <br />
    <br />
    <h3>All Canceled</h3>
    <table style="width:100%; border:solid" class="table table-hover">
        <tr>
            <th style="border:solid; color:blue">TRAINER</th>
            <th style="border:solid; color:blue">EDUCATION</th>
            <th style="border:solid; color:blue">CATEGORY</th>
            <th style="border:solid; color:blue">TRAINERTYPE</th>
            <th style="border:solid; color:blue">KONTENJAN</th>
            <th style="border:solid; color:blue">PRICEPERDAY</th>
            <th style="border:solid; color:blue">TIME</th>
            <th style="border:solid; color:blue">STATUS</th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th style="border:solid; color:black">@item.Trainer.Name <br />@item.Trainer.Surname - <br />@item.Trainer.Department</th>
                <th style="border:solid; color:black">@item.Name</th>
                <th style="border:solid; color:black">@item.Category.Name</th>
                <th style="border:solid; color:black">@item.Trainer.Type</th>
                <th style="border:solid; color:black">@item.Kontenjan</th>
                <th style="border:solid; color:black">@item.PricePerDay</th>
                <th style="border:solid; color:black">@item.Time</th>
                <th style="border:solid; color:black">@item.Student.EducationRequest.IsEducationCanceled
                </th>


            </tr>
        }
        <br />


    </table>
    <div class="row">
        <div class="text-center">
            <ul class="pagination">

                <li>
                    <a class="page-link btn @previousDisabled" href="@Url.ActionLink("MyRequests","Account",new{area="Student",pageindex=Model.PageIndex-1})">
                        &laquo;
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li>
                        <a class="page-link" href="@Url.ActionLink("MyRequests","Account",new{area="Student",pageindex=i})">
                            @i
                        </a>
                    </li>
                }

                <li>
                    <a class="page-link btn @nextDisabled" href="@Url.ActionLink("MyRequests","Account",new{area="Student",pageindex=Model.PageIndex+1})">
                        &raquo;
                    </a>
                </li>
            </ul>



        </div>
    </div>
</div>

